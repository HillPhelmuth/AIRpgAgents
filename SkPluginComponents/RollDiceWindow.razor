@if (IsOpen)
{
    <div class="modal-overlay" @onclick=OutClick>
        <div class="window @($"{Enum.GetName(RollDiceWindowsOptions.Location)?.ToLower()} {RollDiceWindowsOptions.CssClasses}")" style="@RollDiceWindowsOptions.Style" @onclick:stopPropagation>

            @if (RollDiceWindowsOptions.ShowCloseButton || !string.IsNullOrEmpty(RollDiceWindowsOptions.Title))
            {
                <div class="modal-header">
                    <div class="text-center title">
                        @((MarkupString)AsHtml(RollDiceWindowsOptions.Title))
                    </div>
                    <div>
                        @if (RollDiceWindowsOptions.ShowCloseButton)
                        {
                            <button class="close" @onclick="Close"><i class="fas fa-times"></i></button>
                        }
                    </div>
                </div>
            }

            @if (ComponentType != null)
            {
                <DynamicComponent Type="ComponentType" Parameters="RollDiceParameters"></DynamicComponent>
            }
            @if (ChildContent != null)
            {
                @ChildContent
            }

        </div>
    </div>
}